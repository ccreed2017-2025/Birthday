import React, { useState, useEffect } from 'react';
import { Plus, Trash2, Calendar, Gift, Clock, Sparkles, PartyPopper, Wand2, Lightbulb, X, Copy, Check, Cloud } from 'lucide-react';
import { initializeApp } from "firebase/app";
import { getAuth, signInWithCustomToken, signInAnonymously, onAuthStateChanged } from "firebase/auth";
import { getFirestore, collection, addDoc, deleteDoc, doc, onSnapshot, query } from "firebase/firestore";

// --- Firebase Setup ---
const firebaseConfig = JSON.parse(__firebase_config);
const app = initializeApp(firebaseConfig);
const auth = getAuth(app);
const db = getFirestore(app);
const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';

// --- Helper Functions ---

const getNextBirthday = (dateString) => {
  const today = new Date();
  const birthDate = new Date(dateString);
  const currentYear = today.getFullYear();
  
  const nextBirthday = new Date(currentYear, birthDate.getMonth(), birthDate.getDate());
  nextBirthday.setHours(0, 0, 0, 0);
  today.setHours(0, 0, 0, 0);

  if (nextBirthday < today) {
    nextBirthday.setFullYear(currentYear + 1);
  }
  
  return nextBirthday;
};

const calculateTimeLeft = (targetDate) => {
  const now = new Date();
  const target = new Date(targetDate);
  target.setHours(0, 0, 0, 0);
  
  const difference = target - now;

  if (difference <= 0 && difference > -86400000) {
    return { isToday: true };
  }

  let timeLeft = {};

  if (difference > 0) {
    timeLeft = {
      days: Math.floor(difference / (1000 * 60 * 60 * 24)),
      hours: Math.floor((difference / (1000 * 60 * 60)) % 24),
      minutes: Math.floor((difference / 1000 / 60) % 60),
      seconds: Math.floor((difference / 1000) % 60),
      isToday: false
    };
  } else {
      timeLeft = { days: 0, hours: 0, minutes: 0, seconds: 0, isToday: false };
  }

  return timeLeft;
};

const formatDate = (dateString) => {
    const options = { month: 'long', day: 'numeric' };
    return new Date(dateString).toLocaleDateString(undefined, options);
};

// --- Gemini API Helper ---

const callGemini = async (prompt) => {
  const apiKey = ""; 
  const maxRetries = 5;
  let attempt = 0;
  let delay = 1000;

  while (attempt < maxRetries) {
    try {
      const response = await fetch(
        `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`,
        {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            contents: [{ parts: [{ text: prompt }] }],
          }),
        }
      );

      if (!response.ok) {
        throw new Error(`API error: ${response.status}`);
      }

      const data = await response.json();
      return data.candidates?.[0]?.content?.parts?.[0]?.text || "Couldn't generate text.";
    } catch (error) {
      attempt++;
      if (attempt >= maxRetries) {
        return "Sorry, I'm having trouble connecting right now. Please try again later.";
      }
      await new Promise(resolve => setTimeout(resolve, delay));
      delay *= 2; 
    }
  }
};

// --- Components ---

const CountdownTimer = ({ targetDate }) => {
  const [timeLeft, setTimeLeft] = useState(calculateTimeLeft(targetDate));

  useEffect(() => {
    const timer = setInterval(() => {
      setTimeLeft(calculateTimeLeft(targetDate));
    }, 1000);

    return () => clearInterval(timer);
  }, [targetDate]);

  if (timeLeft.isToday) {
    return (
      <div className="flex items-center justify-center space-x-2 text-pink-600 font-bold text-xl animate-bounce py-4">
        <PartyPopper size={24} />
        <span>It's Today! Happy Birthday!</span>
        <PartyPopper size={24} />
      </div>
    );
  }

  return (
    <div className="grid grid-cols-4 gap-2 text-center py-2">
      <div className="bg-white/50 rounded-lg p-2 backdrop-blur-sm">
        <div className="text-xl md:text-2xl font-bold text-indigo-600">{timeLeft.days || 0}</div>
        <div className="text-xs text-slate-500 uppercase tracking-wider">Days</div>
      </div>
      <div className="bg-white/50 rounded-lg p-2 backdrop-blur-sm">
        <div className="text-xl md:text-2xl font-bold text-indigo-600">{timeLeft.hours || 0}</div>
        <div className="text-xs text-slate-500 uppercase tracking-wider">Hrs</div>
      </div>
      <div className="bg-white/50 rounded-lg p-2 backdrop-blur-sm">
        <div className="text-xl md:text-2xl font-bold text-indigo-600">{timeLeft.minutes || 0}</div>
        <div className="text-xs text-slate-500 uppercase tracking-wider">Mins</div>
      </div>
      <div className="bg-white/50 rounded-lg p-2 backdrop-blur-sm">
        <div className="text-xl md:text-2xl font-bold text-indigo-600">{timeLeft.seconds || 0}</div>
        <div className="text-xs text-slate-500 uppercase tracking-wider">Secs</div>
      </div>
    </div>
  );
};

const GeneratedContent = ({ title, content, onClose }) => {
  const [copied, setCopied] = useState(false);

  const handleCopy = () => {
    const textArea = document.createElement("textarea");
    textArea.value = content;
    document.body.appendChild(textArea);
    textArea.select();
    document.execCommand("copy");
    document.body.removeChild(textArea);
    
    setCopied(true);
    setTimeout(() => setCopied(false), 2000);
  };

  return (
    <div className="mt-4 bg-white/90 rounded-xl p-4 border border-indigo-100 animate-in fade-in zoom-in-95 duration-200">
      <div className="flex justify-between items-center mb-2">
        <h4 className="font-semibold text-indigo-600 flex items-center text-sm">
          <Sparkles size={14} className="mr-1" /> {title}
        </h4>
        <div className="flex space-x-1">
          <button 
            onClick={handleCopy}
            className="p-1 text-slate-400 hover:text-indigo-600 transition-colors"
            title="Copy to clipboard"
          >
            {copied ? <Check size={16} /> : <Copy size={16} />}
          </button>
          <button 
            onClick={onClose}
            className="p-1 text-slate-400 hover:text-red-400 transition-colors"
          >
            <X size={16} />
          </button>
        </div>
      </div>
      <div className="text-sm text-slate-600 whitespace-pre-line leading-relaxed">
        {content}
      </div>
    </div>
  );
};

const BirthdayCard = ({ birthday, onDelete }) => {
  const nextDate = getNextBirthday(birthday.date);
  const [aiState, setAiState] = useState({ type: null, content: null, loading: false });

  const calculateAgeTurning = () => {
    const birthYear = new Date(birthday.date).getFullYear();
    const nextYear = nextDate.getFullYear();
    return nextYear - birthYear;
  };

  const handleGenerateWish = async () => {
    if (aiState.loading) return;
    setAiState({ type: 'wish', content: null, loading: true });
    
    const age = calculateAgeTurning();
    const prompt = `Write a short, warm, and slightly fun birthday wish for ${birthday.name} who is turning ${age}. Emoji friendly.`;
    
    const content = await callGemini(prompt);
    setAiState({ type: 'wish', content, loading: false });
  };

  const handleGenerateGifts = async () => {
    if (aiState.loading) return;
    setAiState({ type: 'gift', content: null, loading: true });
    
    const age = calculateAgeTurning();
    const prompt = `Suggest 5 specific, creative gift ideas for someone named ${birthday.name} turning ${age}. Keep items brief and comma separated or in a short list.`;
    
    const content = await callGemini(prompt);
    setAiState({ type: 'gift', content, loading: false });
  };
  
  return (
    <div className="group relative bg-white/80 hover:bg-white backdrop-blur-md rounded-2xl p-6 shadow-sm hover:shadow-xl transition-all duration-300 border border-indigo-50 overflow-hidden">
      <div className="absolute top-0 left-0 w-1 h-full bg-gradient-to-b from-pink-400 to-indigo-500"></div>
      
      <div className="flex justify-between items-start mb-4">
        <div className="flex items-center space-x-3">
          <div className="h-10 w-10 rounded-full bg-indigo-100 text-indigo-600 flex items-center justify-center">
            <Gift size={20} />
          </div>
          <div>
            <h3 className="font-bold text-lg text-slate-800">{birthday.name}</h3>
            <div className="flex items-center text-sm text-slate-500">
              <Calendar size={14} className="mr-1" />
              {formatDate(birthday.date)}
              <span className="mx-2">•</span>
              <span>Turning {calculateAgeTurning()}</span>
            </div>
          </div>
        </div>
        <button 
          onClick={() => onDelete(birthday.id)}
          className="text-slate-300 hover:text-red-400 transition-colors p-1"
          aria-label="Delete birthday"
        >
          <Trash2 size={18} />
        </button>
      </div>

      <CountdownTimer targetDate={nextDate} />

      <div className="mt-4 pt-4 border-t border-slate-100 flex gap-2">
        <button
          onClick={handleGenerateWish}
          disabled={aiState.loading}
          className="flex-1 flex items-center justify-center space-x-2 text-xs font-medium py-2 px-3 rounded-lg bg-pink-50 text-pink-600 hover:bg-pink-100 transition-colors disabled:opacity-50"
        >
          {aiState.loading && aiState.type === 'wish' ? (
            <span className="animate-pulse">Thinking...</span>
          ) : (
            <>
              <Wand2 size={14} />
              <span>Draft Wish</span>
            </>
          )}
        </button>
        <button
          onClick={handleGenerateGifts}
          disabled={aiState.loading}
          className="flex-1 flex items-center justify-center space-x-2 text-xs font-medium py-2 px-3 rounded-lg bg-indigo-50 text-indigo-600 hover:bg-indigo-100 transition-colors disabled:opacity-50"
        >
          {aiState.loading && aiState.type === 'gift' ? (
            <span className="animate-pulse">Brainstorming...</span>
          ) : (
            <>
              <Lightbulb size={14} />
              <span>Gift Ideas</span>
            </>
          )}
        </button>
      </div>

      {aiState.content && (
        <GeneratedContent 
          title={aiState.type === 'wish' ? "Drafted Wish" : "Gift Suggestions"}
          content={aiState.content}
          onClose={() => setAiState({ type: null, content: null, loading: false })}
        />
      )}
    </div>
  );
};

const EmptyState = () => (
  <div className="text-center py-12 px-4 rounded-3xl bg-white/40 border-2 border-dashed border-indigo-200">
    <div className="mx-auto h-16 w-16 bg-indigo-50 text-indigo-300 rounded-full flex items-center justify-center mb-4">
      <Sparkles size={32} />
    </div>
    <h3 className="text-lg font-medium text-slate-700">No birthdays yet!</h3>
    <p className="text-slate-500 mt-1">Add your friends and family to start the countdown.</p>
  </div>
);

export default function App() {
  const [birthdays, setBirthdays] = useState([]);
  const [user, setUser] = useState(null);
  
  const [newName, setNewName] = useState("");
  const [newDate, setNewDate] = useState("");
  const [isAdding, setIsAdding] = useState(false);

  // 1. Initialize Auth
  useEffect(() => {
    const initAuth = async () => {
      if (typeof __initial_auth_token !== 'undefined' && __initial_auth_token) {
        await signInWithCustomToken(auth, __initial_auth_token);
      } else {
        await signInAnonymously(auth);
      }
    };
    initAuth();
    const unsubscribe = onAuthStateChanged(auth, setUser);
    return () => unsubscribe();
  }, []);

  // 2. Fetch Data (Listen to Firestore)
  useEffect(() => {
    if (!user) return;

    // Use query() with a simple collection reference
    // We sort on the client side to avoid needing complex Firestore indexes
    const q = query(collection(db, 'artifacts', appId, 'users', user.uid, 'birthdays'));
    
    const unsubscribe = onSnapshot(q, (snapshot) => {
      const loadedBirthdays = snapshot.docs.map(doc => ({
        id: doc.id,
        ...doc.data()
      }));
      setBirthdays(loadedBirthdays);
    }, (error) => {
      console.error("Error fetching birthdays:", error);
    });

    return () => unsubscribe();
  }, [user]);

  const handleAddBirthday = async (e) => {
    e.preventDefault();
    if (!newName || !newDate || !user) return;

    try {
      await addDoc(collection(db, 'artifacts', appId, 'users', user.uid, 'birthdays'), {
        name: newName,
        date: newDate,
        createdAt: Date.now()
      });
      
      setNewName("");
      setNewDate("");
      setIsAdding(false);
    } catch (err) {
      console.error("Error saving birthday:", err);
    }
  };

  const handleDelete = async (id) => {
    if (!user) return;
    try {
      await deleteDoc(doc(db, 'artifacts', appId, 'users', user.uid, 'birthdays', id));
    } catch (err) {
      console.error("Error deleting birthday:", err);
    }
  };

  // Sort birthdays by closest upcoming date (client-side)
  const sortedBirthdays = [...birthdays].sort((a, b) => {
    const nextA = getNextBirthday(a.date);
    const nextB = getNextBirthday(b.date);
    return nextA - nextB;
  });

  return (
    <div className="min-h-screen bg-gradient-to-br from-indigo-50 via-purple-50 to-pink-50 p-6 md:p-10 font-sans text-slate-800">
      <div className="max-w-2xl mx-auto">
        
        {/* Header */}
        <header className="flex justify-between items-center mb-10">
          <div>
            <h1 className="text-3xl md:text-4xl font-extrabold bg-clip-text text-transparent bg-gradient-to-r from-indigo-600 to-pink-500">
              Birthdays
            </h1>
            <p className="text-slate-500 mt-1 flex items-center">
              <Clock size={16} className="mr-2 inline" />
              Counting down the moments
            </p>
          </div>
          
          <div className="flex items-center space-x-2">
            {!user && (
               <div className="text-xs text-indigo-400 animate-pulse flex items-center">
                 <Cloud size={12} className="mr-1"/> Connecting...
               </div>
            )}
            <button
              onClick={() => setIsAdding(!isAdding)}
              className={`flex items-center space-x-2 px-4 py-2 rounded-full font-medium transition-all shadow-md hover:shadow-lg ${
                isAdding 
                  ? 'bg-slate-200 text-slate-600 hover:bg-slate-300' 
                  : 'bg-indigo-600 text-white hover:bg-indigo-700'
              }`}
            >
              {isAdding ? (
                <span>Cancel</span>
              ) : (
                <>
                  <Plus size={18} />
                  <span>Add New</span>
                </>
              )}
            </button>
          </div>
        </header>

        {/* Add Form */}
        {isAdding && (
          <div className="mb-8 bg-white rounded-2xl p-6 shadow-lg border border-indigo-100 animate-in fade-in slide-in-from-top-4 duration-300">
            <h2 className="text-lg font-bold mb-4 text-slate-700">Who are we celebrating?</h2>
            <form onSubmit={handleAddBirthday} className="space-y-4">
              <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div className="space-y-2">
                  <label className="text-xs font-semibold uppercase text-slate-500">Name</label>
                  <input
                    type="text"
                    value={newName}
                    onChange={(e) => setNewName(e.target.value)}
                    placeholder="e.g. Aunt Sally"
                    className="w-full px-4 py-3 rounded-xl bg-slate-50 border border-slate-200 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 outline-none transition-all"
                    required
                  />
                </div>
                <div className="space-y-2">
                  <label className="text-xs font-semibold uppercase text-slate-500">Date of Birth</label>
                  <input
                    type="date"
                    value={newDate}
                    onChange={(e) => setNewDate(e.target.value)}
                    className="w-full px-4 py-3 rounded-xl bg-slate-50 border border-slate-200 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 outline-none transition-all"
                    required
                  />
                </div>
              </div>
              <button
                type="submit"
                disabled={!user}
                className="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 rounded-xl transition-all flex justify-center items-center shadow-md hover:shadow-lg active:scale-[0.98] disabled:opacity-50 disabled:cursor-not-allowed"
              >
                {user ? "Start Countdown" : "Connecting to cloud..."}
              </button>
            </form>
          </div>
        )}

        {/* List */}
        <div className="space-y-4">
          {sortedBirthdays.length === 0 ? (
            <EmptyState />
          ) : (
            sortedBirthdays.map((b) => (
              <BirthdayCard 
                key={b.id} 
                birthday={b} 
                onDelete={handleDelete} 
              />
            ))
          )}
        </div>
        
        {/* Footer */}
        <div className="mt-12 text-center text-slate-400 text-sm">
            Powered by ✨ Gemini • Saved to the Cloud ☁️
        </div>
      </div>
    </div>
  );
}
